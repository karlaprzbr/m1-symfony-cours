{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-6">
                <h1>Room</h1>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a href="{{ path('room_edit', {'id': room.id}) }}" class="btn btn-secondary h-75 shadow mx-2">Edit</a>
                {{ include('room/_delete_form.html.twig') }}
            </div>
        </div>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ room.city }}</td>
            </tr>
            <tr>
                <th>Creation user</th>
                <td>{{ room.creationUser.firstName }} {{ room.creationUser.lastName }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('room_index') }}">back to list</a>
    </div>
{% endblock %}
